<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3">Forgot Password</h1>
  <div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3">
    <form action="/forgot" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="email" class="form-label">Registered email</label>
        <input type="email" class="form-control" id="email" name="email" required />
      </div>
      <button class="btn btn-brand">Send OTP</button>
      <a href="/reset" class="btn btn-outline-secondary ms-2">I already have an OTP</a>
    </form>
  </div>
</div>
