<% layout("/layouts/boilerplate")%>

<div
  id="loading-spinner"
  style="
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(255, 255, 255, 0.7);
    z-index: 9999;
    justify-content: center;
    align-items: center;
  "
>
  <div class="spinner"></div>
</div>

<div class="container mt-5">
  <h2 class="mb-4">ðŸ§³ Plan Your Trip</h2>

  <form action="/listings/itinerary" method="POST" id="itinerary-form">
    <div class="mb-3">
      <label for="place" class="form-label">Destination</label>
      <input
        type="text"
        class="form-control"
        id="place"
        name="place"
        required
      />
    </div>
    <div class="mb-3">
      <label for="days" class="form-label">Number of Days</label>
      <input
        type="number"
        class="form-control"
        id="days"
        name="days"
        required
      />
    </div>
    <button type="submit" class="btn btn-danger">Generate Itinerary</button>
    <hr />
    <p
      id="wait-message"
      style="font-size: 16px; margin-top: 12px; font-weight: 500"
    >
      Please hold on for a moment after clicking
      <strong>"Generate Itinerary"</strong> â€” we're crafting your personalized
      travel plan.
    </p>
    <hr />
  </form>

  <% if (itinerary) { %>
  <div class="mt-4 p-3 bg-light rounded shadow">
    <h4>Your Itinerary:</h4>
    <div class="itinerary-content"><%- itinerary %></div>
  </div>
  <% } %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("#itinerary-form");
    if (form) {
      form.addEventListener("submit", function () {
        document.getElementById("loading-spinner").style.display = "flex";
      });
    }
  });
</script>
