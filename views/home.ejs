<% layout("/layouts/boilerplate")%>

<style>
  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
    margin: 2rem 1rem;
  }

  .photo-tile {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    background: #fff;
    padding: 0.75rem 0.75rem 0 0.75rem; /* top, left, right padding */
  }

  .photo-tile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    transition: transform 0.5s ease;
  }

  .photo-tile:hover img {
    transform: scale(1.05);
  }

  .photo-caption {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    color: white;
    background: rgba(0, 0, 0, 0.4);
    padding: 0.5rem 1rem;
    border-radius: 10px;
    font-style: italic;
    font-size: 1.1rem;
  }

  .explore-btn-container {
    text-align: center;
    margin: 3rem 0;
  }

  .explore-btn {
    font-size: 1.3rem;
    padding: 0.8rem 2rem;
    border-radius: 30px;
  }

  /* Make tiles larger on laptop/desktop */
  @media (min-width: 992px) {
    .photo-grid {
      grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
      gap: 1.25rem;
    }
  }
  @media (min-width: 1400px) {
    .photo-grid {
      grid-template-columns: repeat(auto-fit, minmax(480px, 1fr));
    }
  }
</style>

<div class="container-fluid">
  <!-- Image Grid with Captions -->
  <div class="photo-grid">
    <% landingImages.forEach(image => { %>
    <div class="photo-tile">
      <img src="<%= image.url %>" alt="Place" />
      <div class="photo-caption"><%= image.caption %></div>
    </div>
    <% }) %>
  </div>

  <!-- Explore Button -->
  <div class="explore-btn-container">
    <a href="/listings" class="btn btn-danger explore-btn">Explore NomadNest</a>
  </div>
</div>
