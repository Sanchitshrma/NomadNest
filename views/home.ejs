<% layout("/layouts/boilerplate")%>

<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(45%, 1fr));
    gap: 1.5rem;
    padding: 2rem;
  }

  .photo-tile {
    position: relative;
    height: 300px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 15px;
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease-out;
  }

  .photo-tile.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .photo-tile:nth-child(odd) {
    animation-delay: 0.2s;
  }
  .photo-tile:nth-child(even) {
    animation-delay: 0.4s;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .photo-tile:hover {
    cursor: pointer;
  }

  .photo-tile:hover img {
    transform: scale(1.08);
  }

  .photo-caption {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    color: white;
    background: rgba(0, 0, 0, 0.4);
    padding: 0.5rem 1rem;
    border-radius: 10px;
    font-style: italic;
    font-size: 1.1rem;
    transition: background 0.3s ease;
    z-index: 2;
  }

  .photo-tile:hover .photo-caption {
    background: rgba(0, 0, 0, 0.6);
  }

  .explore-btn-container {
    display: flex;
    justify-content: center;
    margin: 3rem 0;
  }

  .explore-btn {
    font-size: 1.4rem;
    padding: 1rem 2.5rem;
    border-radius: 30px;
    transition: all 0.4s ease;
    background: linear-gradient(135deg, #ff416c, #ff4b2b);
    color: white;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  .explore-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }
</style>

<div class="container-fluid image-grid">
  <% landingImages.forEach(image => { %>
  <div class="photo-tile" style="background-image: url('<%= image.url %>')">
    <div class="photo-caption parallax-caption"><%= image.caption %></div>
  </div>
  <% }) %>
</div>
<!-- Explore Button -->
<div class="explore-btn-container">
  <a href="/listings" class="btn btn-danger explore-btn">Explore NomadNest</a>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const tiles = document.querySelectorAll(".photo-tile");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    tiles.forEach((tile) => {
      observer.observe(tile);
    });
  });
</script>
